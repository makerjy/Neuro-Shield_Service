# Core service identifiers
SERVICE_NAME=neuro-shield

ENVIRONMENT=local

# Frontend
BASE_PATH=/neuro-shield/
FRONT_DEV_PORT=5173
WEB_HOST_PORT=8080

# Backend
API_PORT=8000
BACKEND_ENTRY=server_fastapi.app:app

# PostgreSQL
DB_HOST_PORT=5433
DB_NAME=neuro
DB_USER=dbuser
DB_PASSWORD=dbpass
DATABASE_URL=postgresql+psycopg://dbuser:dbpass@db:5432/neuro

# Redis / Celery
REDIS_HOST_PORT=6379
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# MinIO / S3
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=neuro-shield-artifacts

# Optional ClickHouse (profile: analytics)
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_TCP_PORT=9009

# Auth / security
JWT_SECRET=change-me
JWT_PUBLIC_KEY=
INGEST_SHARED_SECRET=change-me

# Schedules
KPI_REFRESH_CRON=*/5 * * * *
REPORT_CRON=0 3 * * *

# Model options
USE_MODEL=false
MODEL_PATH=./models/model.pkl
MODEL_GEN_PATH=./models/model_gen.pkl
MODEL_SCALER_PATH=./models/model_scaler.pkl

# Demo options
DEMO_MODE=false
DEMO_RISK_SCALE=1.0
DEMO_RISK_MAX=100

# Vite runtime build variables
VITE_BASE_PATH=/neuro-shield/
VITE_USE_REAL_CENTRAL_API=false
VITE_USE_REAL_LOCAL_CENTER_API=false
